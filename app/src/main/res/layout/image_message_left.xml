<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/left_message_bg_25dp_radius"
    android:orientation="vertical"
    android:padding="10dp"
    android:elevation="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_message_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/less_light" />


        <TextView
            android:id="@+id/image_message_timestamp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:text="10:50 AM"
            android:textColor="#ffffffff"
            android:layout_gravity="right|bottom"/>

    </FrameLayout>

    <TextView
        android:id="@+id/image_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="This is a message with the image"
        android:textColor="@color/colorTextPrimary" />


</LinearLayout>